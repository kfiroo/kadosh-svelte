{
    "name": "kadosh-svelte",
    "version": "1.0.0",
    "devDependencies": {
        "jest": "^24.9.0",
        "rollup": "^1.12.0",
        "rollup-plugin-commonjs": "^10.0.0",
        "rollup-plugin-livereload": "^1.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^5.1.2",
        "svelte": "^3.0.0",
        "svelte-simple-modal": "^0.2.2",
        "firebase": "^7.5.1",
        "rollup-plugin-json": "^4.0.0",
        "svelte-swipe": "^1.3.1"
    },
    "dependencies": {
        "lodash": "^4.17.15",
        "sirv-cli": "^0.4.4",
        "svelte-dnd": "^0.0.10"
    },
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public --single --host 0.0.0.0",
        "start:dev": "sirv public --single --dev --host 0.0.0.0",
        "test": "jest",
        "surge": "surge --project ./public --domain kadosh.surge.sh",
        "deploy": "yarn build && yarn surge"
    },
    "git": {
        "scripts": {
            "pre-push": "yarn deploy"
        }
    }
}
